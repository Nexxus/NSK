{% extends 'base.html.twig' %}

{% block body %}
    <h1>Attributes list</h1>

    <h4><a href="{{ path('admin_attribute_new') }}">Create a new attribute</a></h4>
    
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Attribute Code</th>
                <th>Price</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% set count = 0 %}
        {% for attribute in attributes %}
            {% set count = count+1 %}
            <tr>
                <td><a href="{{ path('admin_attribute_show', { 'id': attribute.id }) }}">{{ attribute.id }}</a></td>
                <td>{{ attribute.name }}</td>
                <td>{{ attribute.attrcode }}</td>
                <td>&euro; {{ attribute.price|number_format(2, ',', '.') }}</td>
                
                <td>{{ attribute.type }}</td>
                <td>
                    <a class="btn btn-default" href="{{ path('admin_attribute_show', { 'id': attribute.id }) }}">Show</a>
                    {#<a class="btn btn-success" href="{{ path('admin_attribute_edit', { 'id': attribute.id }) }}">Edit</a>#}
                </td>
            </tr>
        {% endfor %}
        
        </tbody>
    </table>
    {% if count == 0 %}
        <h4>{% trans %}No records found{% endtrans %}</h4>
    {% endif %}
{% endblock %}
