{% extends 'admin.html.twig' %}

{% block body %}

    <div class="row" style="margin-bottom: 20px">
        <div class="col-sm-9">
            <h1>Location list</h1>
        </div>
        <div class="col-sm-3" style="padding-top: 15px">
            <a href="{{ path('admin_location_edit', { 'id': 0 }) }}" class="btn btn-primary pull-right" role="button">Create new location</a>
        </div>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th width="1%"></th>
            </tr>
        </thead>
        {% for l in locations %}
        <tr>
            <td>{{ l.id }}</td>
            <td>{{ l.name }}</td>
            <td nowrap>
                <a class="btn btn-success" href="{{ path('admin_location_edit', {'id': l.id}) }}">Edit</a>
                {% if l.products|length == 0 and l.orders|length == 0 and l.companies|length == 0 and l.users|length == 0 %}
                <a class="btn btn-danger btn-delete" href="{{ path('admin_location_delete', { 'id': l.id }) }}" data-class="location" data-name="{{ l.name }}"><span class="glyphicon glyphicon-remove" aria-label="Delete"></span></a>
                {% endif %}
            </td>
        </tr>
        {% else %}
            <tr>
                <td colspan="99">
                    <h4>{% trans %}No records found{% endtrans %}</h4>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
    
