<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>SKU</th>
            <th>Name</th>
            <th>Type</th>
            <th>Quantity</th>
            <th>Price</th>
            <th width="1%"></th>
        </tr>
        <tr>
        </tr>
    </thead>
    <tbody>
    {% for productRelation in productRelations %}
        <tr>
            <td>{{ productRelation.product.id }}</td>
            <td>{{ productRelation.product.sku }}</td>
            <td>{{ productRelation.product.name }}</td>
            <td>{{ productRelation.product.type.name }}</td>
            <td>{{ productRelation.product.quantity }}</td>
            <td>{{ productRelation.product.price }}</td>
            <td nowrap>
                <a class="btn btn-success" href="{{ path('product_edit', { 'id': productRelation.product.id }) }}" data-toggle="modal" data-target="#modalEditor"><span class="glyphicon glyphicon-pencil" aria-label="Edit"></span></a>
                <a class="btn btn-danger" href="{{ path('product_delete', { 'id': productRelation.product.id }) }}"><span class="glyphicon glyphicon-remove" aria-label="Delete"></span></a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="99">
                <h4>{% trans %}No products{% endtrans %}</h4>
            </td>
        </tr>
    {% endfor %}
        
    </tbody>
</table>
