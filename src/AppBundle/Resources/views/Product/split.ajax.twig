
{{ form_start(form, {'action': formAction, 'attr': {'class': 'ajax-form', 'target': '#modalSplitter .modal-content' }}) }}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">Split: {{ product.name }}</h4>
</div>

<div class="modal-body">

    {% if success %}
    <script> location.reload(); </script>
    {% elseif success is same as(false) %}
    <div class="alert alert-danger" role="alert">The product could not be split. Please check details below.</div>
    {% endif %}

    <p>
    Enter the desired values for the separated and new product bundle (or set of individual products).
    </p>

    {{ form_widget(form) }}

</div>

{{ form_end(form) }}

<script>

    $('select#product_split_form_how').change(function () {
        if ($(this).val() == 'split_stockpart' || $(this).val() == 'individualize_stockpart') {
            $('input#product_split_form_quantity').closest('div.form-group').show();
        }
        else {
            $('input#product_split_form_quantity').closest('div.form-group').hide();
        }
    });

</script>
       
