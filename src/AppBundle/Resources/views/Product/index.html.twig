{% extends 'base.html.twig' %}

{% block body %}
    <h1>Stock</h1>

    {{ form_start(form) }}
    <div class="row" style="margin-bottom: 20px">
        <div class="col-sm-4">
            {{ form_widget(form.query, {'attr': {'placeholder': 'Zoeken op Id, Sku of (deel van) naam'} }) }}
        </div>
        <div class="col-sm-2">
            {{ form_widget(form.status) }}
        </div>
        <div class="col-sm-2">
            {{ form_widget(form.location) }}
        </div>
        <div class="col-sm-1">
            {{ form_widget(form.submit) }}
        </div>
        <div class="col-sm-3">
            <a href="{{ path('purchaseorder_edit', { 'id': 0 }) }}" class="btn btn-primary pull-right" role="button">Create new purchase</a>
        </div>
    </div>
    {{ form_end(form) }}

    <table class="table table-striped">
        <thead>
            <tr>
                <th{% if products.isSorted('sku') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(products, 'SKU', 'sku') }}</th>
                <th{% if products.isSorted('name') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(products, 'Name', 'name') }}</th>
                <th{% if products.isSorted('type.name') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(products, 'Type', 'type.name') }}</th>
                <th{% if products.isSorted('location.name') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(products, 'Location', 'location.name') }}</th>
                <th width="10%">Price</th>
                <th width="5%">Purch</th>
                <th width="5%">Repair</th>
                <th width="5%">Sold</th>
                <th width="5%">Used</th>
                <th width="5%">Hold</th>
                <th width="5%">Off</th>
                <th width="5%">Stock</th>
                <th width="1%"></th>
            </tr>
            <tr>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.sku }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.type.name }}</td>
                <td>{{ product.location.name|default("") }}</td>
                <td>&euro; {{ product.price|number_format(2, ',', '.') }}</td>
                <td>{{ product.getQuantityPurchased() }}</td>
                <td>{{ product.getQuantityRepairing() }}</td>
                <td>{{ product.getQuantitySold() }}</td>
                <td>{{ product.getQuantityAttributed() }}</td>
                <td>{{ product.getQuantityOnHold() }}</td>
                <td>{{ product.getQuantityWrittenOff() }}</td>
                <td>{{ product.getQuantityInStock(true) }}</td>
                <td nowrap>
                    <a class="btn btn-success" href="{{ path('product_edit', { 'id': product.id }) }}" data-toggle="modal" data-target="#modalEditor"><span class="glyphicon glyphicon-pencil" aria-label="Edit"></span></a>
                    <a class="btn btn-danger" href="{{ path('product_delete', { 'id': product.id }) }}"><span class="glyphicon glyphicon-remove" aria-label="Delete"></span></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="99">
                    <h4>{% trans %}No records found{% endtrans %}</h4>
                </td>
            </tr>
        {% endfor %}
        
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(products) }}
    </div>

{% endblock %}
