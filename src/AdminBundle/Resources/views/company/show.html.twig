{% extends 'base.html.twig' %}

{% block body %}
<h1>Company</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>KvKnr</th>
            <th>Representative</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>{{ company.id }}</td>
            <td>{{ company.name }}</td>
            <td>{{ company.kvkNr }}</td>
            <td>{{ company.representative }}</td>
            <td>
                <a href="{{ path('admin_company_edit', {'id': company.id} ) }}"><button class="btn btn-success" name="Edit">Edit</button></a>
                {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </td>
        </tr>
        <tr>
            <td>
                <a href="{{ path('admin_company_index') }}">Back to the list</a>
            </td>
        </tr>
    </tbody>
</table>
{% endblock %}
