{% extends 'base.html.twig' %}

{% block body %}
    <h1>Customer list</h1>

    {{ form_start(form) }}
    <div class="row" style="margin-bottom: 20px">
        <div class="col-sm-7">
            {{ form_widget(form.query) }}
        </div>
        <div class="col-sm-2">
            {{ form_widget(form.submit) }}
        </div>
        <div class="col-sm-3">
            <a href="{{ path('customer_edit', { 'id': 0 }) }}" class="btn btn-primary pull-right" role="button">Create new customer</a>
        </div>
    </div>
    {{ form_end(form) }}

    <table class="table table-bordered">
        <thead>
            <tr>
                <th{% if customers.isSorted('c.id') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(customers, 'Id', 'c.id') }}</th>
                <th{% if customers.isSorted('c.name') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(customers, 'Name', 'c.name') }}</th>
                <th>Representative</th>
                <th{% if customers.isSorted('c.email') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(customers, 'E-mail', 'c.email') }}</th>
                <th width="1%"></th>
            </tr>
            <tr>
            </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td>{{ customer.id }}</td>
                <td>{{ customer.name }}</td>
                <td>{{ customer.representative }}</td>
                <td>{{ customer.email }}</td>
                <td nowrap>
                    <a class="btn btn-success" href="{{ path('customer_edit', { 'id': customer.id }) }}"><span class="glyphicon glyphicon-pencil" aria-label="Edit"></span></a>
                    {% if customer.salesOrders|length == 0 %}
                    <a class="btn btn-danger" href="{{ path('customer_delete', { 'id': customer.id }) }}"><span class="glyphicon glyphicon-remove" aria-label="Delete"></span></a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="99">
                    <h4>{% trans %}No records found{% endtrans %}</h4>
                </td>
            </tr>
        {% endfor %}
        
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(customers) }}
    </div>
{% endblock %}
